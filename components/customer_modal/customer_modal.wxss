.customerService_modal{
  display:inline-block;
  background: rgba(0,0,0,0.5);
  width:100%;
  height:1344rpx; 
  position:fixed;
  top:0rpx;
  left:0rpx;
  z-index:99;
  opacity: 0;
}
/*对话框  */
.customerService_modal_index{
   width:560rpx;
   background:#fff;
   margin:0 95rpx; 
   margin-top:330rpx;
   border-radius: 8rpx;
}
/*头部  */
.customerService_top{
  width:100%;
  border-bottom: 1px solid  #E5E5E5;
}
/*客服电话 */
.customerService_title{
  display: inline-block;
  width:100%;
  margin-top:50rpx;
  text-align: center;
}
.customerService_people{
  display: inline-block;
  font-family: PingFangSC-Regular;
  font: 36rpx/50rpx "";
  color: #000000;
}
/*  0571—88888888 */
.customerService_content{
  display: inline-block;
  width:100%;
  margin-top:18rpx;
  text-align: center;
  margin-bottom:30rpx;
}
.customerService_tel{
  display: inline-block;
  font-family: PingFangSC-Regular;
  font: 30rpx/42rpx "";
  color: #888888;
  text-align: center;
}
/*底部的*/
.customerService_bot{
  display: inline-block;
  width:100%;
}
.customerService_tie{
  float: left; 
  width:49%;
  border-right:1px solid #E5E5E5;
  text-align: center;
  padding:25rpx 0;
}
/*取消*/
.customerService_cancle{
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  line-height:50rpx;
  color: #000000;
  
}