.win-modal {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  background: rgba(0,0,0,0.50);
  z-index: 100; 
}

.win-body {
  position: absolute;
  top: 20%;      
  /* transform: translateY(-50%);     */
  width: 100%;
  text-align: center;
  transition: all 2s;
}
.win-body-active {
  top: 51%;   
  transform: translateY(-50%);    
}
.win-head {
  width:540rpx;
  top: -205rpx;
  position: absolute;
  left: 52%;
  transform: translateX(-50%);
  z-index: 110;
}
.win-bar {
  position: relative;
  text-align: center;
  z-index: 1;
}
.win-bar image {
  width: 615rpx;
}
.win-bar text{
  position: absolute;
  font-family: PingFangSC-Medium;
  font-size: 50rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  top: 50%;
  left: 50%;  
  transform: translate(-50%, -50%);
}
.win-content {
  position: relative; 
  width: 535rpx;
  min-height: 200rpx;  
  background: #fff;
  display: inline-block;
  top: -15rpx;
  border-radius: 0 0 14rpx 14rpx;
  padding: 46rpx 0 40rpx 0;
  text-align: center;
}

.win-content .win-ribbon {
  position: absolute;
  top: 20rpx;
  left: -25rpx; 
  display: inline-block;
  width: 45rpx;
}

.win-content .describe {
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: left;
  margin-bottom: 20rpx;
  display: flex;
  align-items: baseline;   
}

.win-content .describe text {
  width: 20rpx;
  height: 20rpx;
  background: #EE6643;
  display: inline-block;
  border-radius: 50%;
  margin-right: 10rpx;
}

.win-content .title{
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: left;
  margin-bottom: 30rpx;
}

.win-content .win-footer {
  width: 135rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}

.win-button {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  background: #F3654C;
  border-radius: 14rpx;
  display: inline-block;
  padding: 9rpx 54rpx;
  line-height: 40rpx;
  margin-top: 20rpx;
}
