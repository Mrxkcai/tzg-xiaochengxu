.win-modal {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  background: rgba(0,0,0,0.50);
  z-index: 100; 
}

.win-body {
  position: absolute;
  top: 19%;      
  /* transform: translateY(-50%);      */
  width: 100%;
  text-align: center;
}
.win-bar {
  position: relative;
  text-align: center;
  z-index: 1;
}
.win-bar image {
  width: 615rpx;
}
.win-bar text{
  position: absolute;
  font-family: PingFangSC-Medium;
  font-size: 50rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  top: 50%;
  left: 50%;  
  transform: translate(-50%, -50%);
}
.win-content {
  position: relative; 
  width: 535rpx;
  min-height: 200rpx;  
  background: #fff;
  display: inline-block;
  top: -15rpx;
  border-radius: 0 0 14rpx 14rpx;
  padding: 46rpx 0 40rpx 0;
  text-align: center;
}

.win-content .title{
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: left;
  margin-bottom: 30rpx;
}
.win-button {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  background: #F3654C;
  border-radius: 14rpx;
  display: inline-block;
  padding: 9rpx 54rpx;
  line-height: 40rpx;
  margin-top: 40rpx;
}
.sad {
  width: 137rpx;
  display: inline-block;
}
.close {
  width: 77rpx;
  bottom: -115rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}