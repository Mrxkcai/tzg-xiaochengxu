.sign_modal{
  background: rgba(0,0,0,.5);
  width:100%;
  height:100%; 
  position:fixed;
  top:0;
  left:0; 
  z-index: 100;
  opacity: 0; 
}
.sign-body {
  position: absolute;
  top: 22%;
  left: 50%;
  transform: translateX(-50%);
}
.sign_modal_index{
   width:460rpx;
   border-radius: 10rpx;
}
.sign_image{
  width:250rpx;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(-50%, -45%);
}
.sign_title{
  width: 100%;
  margin-bottom:23.2rpx;
  position:absolute;
  top:130rpx;
  text-align: center;
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  color: #EAE7E7;
}
.sign_day{
  font-size:52rpx;
  font-family: PingFangSC-Medium;
  color: #fff;
}
.sign_center{
  width: 100%;
  text-align: center;
  position: absolute;
  top:224.9rpx;
}
.sign_center_left{
   height: 76.5rpx;
   width:46.3rpx;
}
.sign_center_img{
  width:46rpx;
}
.sign_center_add{
   margin: 0 17rpx; 
  font-family: PingFangSC-Regular;
  font-size: 48rpx;
  color: #FFFFFF;
  display: inline-block;
  vertical-align: top;
}
.sign_cneter_num{
  font-family: PingFangSC-Medium;
  font-size: 52rpx;
  color: #FFFFFF;
}
.sign_content{
  position: absolute;
  top:308rpx;
  text-align: center;
  width: 100%;
}
.sign_content_title{
  padding: 3rpx 20rpx;
  background: #fff; 
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #999999;
}
.sign_bottom{
  width: 100%;
  position: absolute;
  top:407rpx;
  text-align: center;
}
.sign_bottom_left{
  display: inline-block;
  background: #FFE326;
  border-radius: 100rpx; 
  font-family: PingFangSC-Regular;
  font-size: 40rpx;
  color: #B82E15;
  text-align: center; 
  width: 354rpx;
  padding: 10rpx 0;
}
 .sign_bottom_right{
   margin-left:15.7rpx;
   width: 29rpx;
   height: 32rpx;
   border-top: 2px solid #B82E15;
   border-right: 2px solid #B82E15;
   display: inline-block;
  transform: skewY(-25deg);
 }
.sign-arrow {
   transform: rotate(56deg);   
  display: inline-block;
}
 .sign_modal_circle{
   margin-top:60rpx;
   text-align: center;
 }
 .sign_fail{
   display:inline_block;
   color:#fff;
   font-weight:100;
   font-size:77rpx;
   line-height: 62rpx;
   vertical-align: middle;
   text-align:center;
 }
 .close {
  width: 77rpx;
  bottom: -137rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
 }

