<view style="padding-top:20rpx">
  <image src="/images/backgrand.png" mode="widthFix" class="backgrang"></image>  
  <view class="user">

    <!-- <form report-submit="true" bindsubmit="formSubmit">
      <button open-type="openSetting">打开授权设置页</button>  
      <button open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="onGotUserInfo">获取用户信息</button> 
      <button formType="submit">提交</button>
    </form> -->

    <view class="user-center">
      <image class="icon" src="{{userInfo.avatarUrl}}" mode="widthFix"></image>
      <view class="user-message">
        <view>
          <view class="login" wx:if="{{!tzgUserInfo}}">点击登录</view> 
          <view class="name">{{userInfo.nickName}}</view>
          <view class="gray-button" bindtap='toLogin'>{{tzgUserInfo.mobile?'已绑定手机号':'绑定手机号'}}</view>  
        </view>
        <view style="text-align:right">
          <view class="score-title">累计积分</view>
          <view class="score">
            <image src="/images/score.png" mode="widthFix" bindtap='sign'></image>
            {{tzgUserInfo.integral}}
          </view>
        </view> 
      </view>  
    </view>
    <view class="bar">
      <image class="black_bar" src="/images/black_bar.png" mode="widthFix"></image>
      <view class="sign-tip">
        <image src="/images/bell.png" mode="widthFix"></image>
        <text class="tip">明天记得来哦，连续签到可得<text class="small-score">30</text>积分</text>
      </view>
    </view>
  </view> 
  <view class="lottery-list">
    <view class="tip-bar">
      <view>
        <text>积分抽奖</text> 
        <image src="/images/quest.png" mode="widthFix" class="quest" bindtap='openModal'></image>
      </view>
      <image src="/images/server.png" mode="widthFix" class="server"></image> 
    </view>

    <view wx:for="{{awardList}}" wx:key="{{item}}">
       <prize-info prize-info="{{item}}" bind:joinAward="joinAward">
       </prize-info> 
    </view>
  </view> 
  
  <win-modal win-tip="{{winTip}}" id="winModal"></win-modal>
  <lose-modal lose-tip="{{loseTip}}" id="loseModal"></lose-modal>
  <sign-modal sign-tip="{{tzgUserInfo}}" id="signModal"></sign-modal>
</view>