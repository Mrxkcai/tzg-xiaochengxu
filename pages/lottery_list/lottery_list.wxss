.user-center {
  display: flex;
  padding: 70rpx 20rpx;
  margin: 0rpx 30rpx; 
  background: #FFFFFF;
  border-radius: 10rpx;
}

.user-center .icon{
  width: 130rpx;
  border-radius: 50%;
}
.user-message {
  width: 100%; 
  display: flex;
  justify-content: space-between;
  margin-left: 24rpx;
}
.user-message .name {
  font-family: 'PingFangSC-Regular';
  font-size: 36rpx;
  color: #333333;
  letter-spacing: -0px;
}

.gray-button {
  font-family: 'PingFangSC-Regular';
  font-size: 26rpx;
  color: #999999;
  letter-spacing: -0rpx;
  text-align: center;
  border: 1px solid #999999;
  border-radius: 10rpx;
  padding: 0rpx 13rpx;
  margin-top: 15rpx;
}

.score-title {
  font-family: 'PingFangSC-Regular';
  font-size: 24rpx;
  color: #333333;
  letter-spacing: -0rpx;
}

.score {
  font-family: 'PingFangSC-Semibold';
  font-size: 48rpx;
  color: #F3654C;
  letter-spacing: -0rpx;
  margin-top: 15rpx;
}

